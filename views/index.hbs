<div class="container">
    <h1 class="center-h">{{title}}</h1>
    <p>Welcome to {{title}}!  </p>
    {{!-- {{#if user.status}} --}}
    <h1 class="center-h lh-1">Artist Search</h1>
    <form action="/artist-search" method="GET">
      <input type="text" placeholder="Search for any artist here!" name="term">
      <button>Search for an Artist</button>
    </form>
    <h1 class="center-h lh-1" >Find Events by Artist</h1>
    <form action="/show-events" method="GET">
      <input type="text" placeholder="Search for any artist here!" name="term">
      <button>Search for an Artist</button>
    </form>
</div>

