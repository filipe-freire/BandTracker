<div class="container">
  {{#unless user.status}}
<h4 class="activate-acc-msg"> Please check your email to confirm your account!</h4>
{{/unless}}

<h1 class="center-h lh-1">Your Account</h1>
<div class="flex-row">
<h5><strong>Profile Picture</strong>: <br>

<img src="{{user.profilePicture}}" alt="" style="width: 150px;">

</h5>
<div class="flex-column">
<br />
<h4><strong>Name</strong>:</h4> <h6>{{user.name}}</h6>

<h4><strong>Email</strong>:</h4> <h6>{{user.email}}</h6>
</div> 
</div>

<a class="a-colors center-h" href="/favourites-display">My Favourite Artists</a><br>
{{#if user.status}}
<a class="a-colors center-h" href="/favourites-add">Add Favourite Band</a>
<br>

<div class="flex-column btns">

<a class="orange-bt"href="/edit">Edit Profile</a>
<form method="POST" action="/delete">
  <button class="orange-bt delete">Delete User</button>
</form>
</div>
</div>

{{/if}}

