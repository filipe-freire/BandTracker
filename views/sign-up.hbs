<div class="container">

<h1 class="center-h lh-1">Sign Up</h1>

<form class="sign-up-form" action="/authentication/sign-up" method="POST" enctype="multipart/form-data">

  <label for="input-name">Name</label>
  <input type="text" id="input-name" name="name" placeholder="Your Name" {{!-- required minlength="3" maxlength="12" --}}/>
  
  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" required/>
  
  <label for="input-password">Password</label>
  <input type="password" name="password" id="input-password" placeholder="A Strong Password" {{!-- required minlength="3" --}}/>
  
  <!-- PROFILE PICTURE UPLOAD -->
  <label for="input-profilePicture">Submit Picture</label>
  <input type="file" name="profilePicture" id="input-profilePicture">

  <button class="orange-bt">Sign Up</button>
</form>
</div>